<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/iv_icon"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/login_item" >

        <ImageView
            android:id="@+id/icon_n"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/login_user" />

        <ImageView
            android:id="@+id/iv_r1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/icon_n"
            android:layout_toRightOf="@+id/icon_n"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/login_lin" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_r1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="13dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/login_clearname"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/login2"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pass"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/rl_name"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/login_item" >

        <ImageView
            android:id="@+id/icon_p"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/login_pass" />

        <ImageView
            android:id="@+id/iv_r2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/icon_p"
            android:layout_toRightOf="@+id/icon_p"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/login_lin" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_r2"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入密码"
            android:maxLength="18"
            android:paddingLeft="13dp"
            android:password="true"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/login_clearpass"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/login2"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_pass"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="忘记密码?" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_pass"
        android:layout_marginRight="39dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="注册" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="登录"
        android:textColor="@color/white" />

</RelativeLayout>