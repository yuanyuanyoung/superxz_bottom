<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dh.superxz_bottom.activity.AllActivity">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <!--顶部颜色块-->
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:orientation="vertical"
                android:visibility="gone"></LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/holo_blue_light"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="MENU"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_title_name"
                    style="@style/title_name"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white" />

                <!-- 默认不显示 -->

                <Button
                    android:id="@+id/btn_top_right"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

        <!-- Header 层 -->
        <LinearLayout
            android:id="@+id/ll_drawer_view"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="vertical">
            <!--顶部颜色块-->
            <LinearLayout
                android:id="@+id/ll_side_top"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是侧边框"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_side"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
