<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0fff0"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/my_common_top" />

    <View
        android:id="@+id/pc_v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top"
        android:background="@color/wb_top_line" />

    <TextView
        android:id="@+id/pc_tv_payment_account"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/pc_v1"

        android:paddingBottom="5dp"
        android:paddingLeft="15dip"
        android:paddingTop="5dp"
        android:text="当前账号:11111111111"
        android:textColor="#5d5d5d"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/pc_tv_payment_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/pc_tv_payment_account"
        android:paddingBottom="5dp"
        android:paddingLeft="15dip"
        android:paddingTop="5dp"
        android:text="充值金额"
        android:textColor="#5d5d5d"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lv_pay_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pc_tv_payment_1"
        android:background="@android:color/white"></ListView>



    <TextView
        android:id="@+id/pc_tv_pay_mode"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/lv_pay_num"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="选择支付方式"
        android:textColor="#5d5d5d"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/pc_lv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pc_tv_pay_mode"
        android:background="@android:color/white"></ListView>

    <com.dh.superxz_bottom.view.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/pc_lv_pay"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:gravity="center">

        <com.dh.superxz_bottom.view.CustomButton
            android:id="@+id/pc_cb_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="确认支付"
            android:textSize="18sp"
            app:customBackground="@color/red"
            app:customTextColor="@color/white"
            app:fillet="true"
            app:textclickeffect="@null" />
    </com.dh.superxz_bottom.view.RevealLayout>

</RelativeLayout>