<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5"
    android:orientation="vertical" >

    <include
        android:id="@+id/ic_top"
        layout="@layout/my_common_top" />

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/ic_top"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_item" >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="23dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_clearname"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/login2"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/rl_1"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_item" >

        <TextView
            android:id="@+id/tv_phone2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/tv_phone2"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:paddingLeft="23dp"
            android:phoneNumber="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/color_e91e63"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/rl_2"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_item" >

        <TextView
            android:id="@+id/tv_phone3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:text="密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_phone3"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入6~20位数字或英文密码"
            android:maxLength="20"
            android:paddingLeft="39dp"
            android:password="true"
            android:singleLine="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_clearpass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/login2"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/rl_3"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_item" >

        <TextView
            android:id="@+id/tv_phone4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_confrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_phone4"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请再次输入密码"
            android:maxLength="18"
            android:paddingLeft="8dp"
            android:password="true"
            android:singleLine="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_clearconfrim"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/login2"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="328sp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>